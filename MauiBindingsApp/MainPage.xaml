            <Entry x:Name="entryHelloTwo" />-->

            <!--<local:TagLabel x:Name="tagLabel"
                            BindingContext="{x:Reference entry}"
                            Text="{Binding Text}"
                            Tag="{Binding Text}"/>
            <Entry x:Name="entry" />
            <Label x:Name="targetLabel"
                   BindingContext="{x:Reference tagLabel}"
                   Text="{Binding Tag}"
                   />-->

            <!--<Entry x:Name="entrySource" />
            <Entry x:Name="entryTarget"
                   BindingContext="{x:Reference entrySource}"
                   Text="{Binding Path=Text, Mode=OneWayToSource}"/>-->

            <Label x:Name="labelName" Text="{Binding Name}" />
            <Label x:Name="labelAge" Text="{Binding Age}" />
            <Entry x:Name="entryName" Text="{Binding Path=Name, Mode=TwoWay}" />
            <Entry x:Name="entryAge" Text="{Binding Path=Age, Mode=TwoWay}" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
