<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiBindingsApp.MainPage"
             xmlns:local="clr-namespace:MauiBindingsApp">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            x:Name="stackLayout">

            <!--<Label x:Name="labelHelloTwo"
                   BindingContext="{x:Reference entryHelloTwo}"
                   Text="{Binding Text}" />-->
            <!--<Label x:Name="labelHelloTwo" 
