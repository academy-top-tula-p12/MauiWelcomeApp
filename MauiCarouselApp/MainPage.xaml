<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiCarouselApp.MainPage">

    <VerticalStackLayout>
        <Label Text="{Binding Source={x:Reference carouselAirlines}, 
                              Path=CurrentItem.Title}" />
        <CarouselView x:Name="carouselAirlines"
                      IndicatorView="indicatorView"
                      HorizontalOptions="Center"
                      CurrentItemChanged="carouselAirlines_CurrentItemChanged">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <VerticalStackLayout>
                        <Label Text="{Binding Title}" 
                                FontSize="28"
                                HorizontalTextAlignment="Center"/>
                        <Image Source="{Binding Logo}" 
                                HeightRequest="70"/>
                        <Label Text="{Binding City}" 
                                FontSize="20"
                                HorizontalTextAlignment="Center"/>
                    </VerticalStackLayout>

                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>
        <IndicatorView x:Name="indicatorView"
                       Margin="0, 20, 0, 0"
                       IndicatorColor="LightBlue"
                       SelectedIndicatorColor="DarkBlue"
                       HorizontalOptions="Center"
                       />

    </VerticalStackLayout>

</ContentPage>
