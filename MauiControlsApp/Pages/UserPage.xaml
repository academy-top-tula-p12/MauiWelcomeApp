<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiControlsApp.Pages.UserPage"
             Title="UserPage">
    <VerticalStackLayout>
        <Button x:Name="buttonBackToMain"
                Text="Back To Main" />

        <Label x:Name="labelUserAge"
            Text="User Name" />
        <Entry x:Name="entryUserName"
               ClearButtonVisibility="WhileEditing" />

        <Label
            Text="User Age" />
            <Entry x:Name="entryUserAge"
               ClearButtonVisibility="WhileEditing"
               Keyboard="Numeric"/>
        
        <Label Text="User Password" />
        <Entry x:Name="entryUserPassword"
                ClearButtonVisibility="WhileEditing"
                IsPassword="True"
               />

        <Label Text="Comments" />
        <ScrollView Orientation="Both" HeightRequest="200">
            <Editor AutoSize="TextChanges" 
                    FontSize="26"
                    WidthRequest="800"/>
        </ScrollView>
        


    </VerticalStackLayout>
</ContentPage>